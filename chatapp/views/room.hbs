<div class="container">
    <div class="row">
        <h1>Node Chat チャットルーム</h1>
    </div>
        <form method="post" action="/">
            <div class="row">
                <div class="col-sm-3">
                    <div class="room-login_user">
                        ログインユーザ：{{userName}}さん
                        <input id="userName" type="hidden" value={{userName}}>
                    </div>
                    <div class="room-message">
                        <div class="form-group">
                            <textarea id="message" rows="4" class="form-control" placeholder="投稿文を入力してください"></textarea>
                        </div>
                    </div>
                    <div class="room-submit">
                        <input type="button" value="投稿" class="btn btn-success" onclick="publish();">
                        <input type="button" value="メモ" class="btn btn-secondary" onclick="memo();">
                        <input type="button" value="DM" class="btn btn-info" onclick="directmsg();">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="room-thread">
                        <!-- lineのグループチャットのようなイメージ -->
                        <div id="thread"></div>
                    </div>
                </div>
                <!-- lineのグループチャットのようなイメージ -->
                <div class="col-sm-3">
                    <div class="room-users align-left">
                        <div id="loginUsers"></div>
                    </div>
                    <div class="room-exit">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        <input type="button" value="退室する" class="btn btn-danger" onclick="exit();">
                    </div>
                </div>
            </div>
        </form>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>
<script src="/javascripts/dm.js"></script>
